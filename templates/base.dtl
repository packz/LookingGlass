<!DOCTYPE html>
<html lang='en'>
<head>
<title id='page-title'>{{ title }}</title>
{% block slow_refresh %}{% endblock slow_refresh %}
<meta name='viewport' content='width=device-width, initial-scale=1'>
<link href="{% static '/css/bootstrap.css'" rel="stylesheet">
<link href="{% static '/css/local.css' %}" rel='stylesheet'>
{% block css_include %}{% endblock css_include %}
<style>
{% if bg_image %}
@media (min-width: 970px) {
body {
  background-image: url("{% static '/img/{{ bg_image }}' %}");
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;
}
}
{% endif %}
{% block local_style %}{% endblock local_style %}
</style>
</head>
<body>
<div class='container-fluid'>
{% block navbar %}
{% include 'navbar.dtl' %}
{% endblock navbar %}
{% block content %}
{% endblock content %}
</div><!-- container -->  
<script src="{% static '/js/jquery.min.js' %}"></script>
<script src="{% static '/js/bootstrap.min.js' %}"></script>
{% block js_includes %}{% endblock js_includes %}
<script>
function async_badge_update() {
  $.getJSON('{% url 'emailclient.new_mail' %}', function(d) {
    if (d['inbox'] != '') {
      $('#page-title').text("{{ title }} - " + d['inbox']);
      {% if title == 'inbox' and not Msg %}
      if (location.hash != '#new_mail') {
	location.hash = 'new_mail';
	location.reload();
      } else {
	location.hash = '';
      };
      {% endif %}
    } else {
      $('#page-title').text("{{ title }}");
    };
    $.each(d, function(key, val) {
      $('.' + key + '-newmail').text(val);
    });

    $.getJSON('{% url 'smp.pending' %}', function(d) {
      if (d.length > 0) {
	$('#attn-contact').show();
	$.each(d, function(key, val) {
	  $('#' + val + '-attn').show();
	  $('#' + val + '-cog').hide();
	});
      };

      /* unroll THIS */
      setTimeout(function() {
	async_badge_update();
      }, 60000);

    });

  });
}
{% block js %}
{% endblock js %}
$(document).ready(function(){ 
  async_badge_update();
 });
</script>
</body>
</html>
